{
  "openapi": "3.0.1",
  "info": {
    "title": "HotelBooking.Api",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://hotel-booking-app-c5czauhchxhjafhh.uksouth-01.azurewebsites.net"
    }
  ],
  "paths": {
    "/hotels": {
      "get": {
        "tags": [
          "HotelBooking.Api"
        ],
        "summary": "Get a list of all hotels",
        "operationId": "GetAllHotels",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/HotelDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/hotels/{name}": {
      "get": {
        "tags": [
          "HotelBooking.Api"
        ],
        "summary": "Find a hotel by its name",
        "description": "Returns hotel details if a hotel with the given name exists.",
        "operationId": "GetHotelByName",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HotelDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/hotels/availability": {
      "get": {
        "tags": [
          "HotelBooking.Api"
        ],
        "summary": "Find available rooms in a hotel for a given date range and guest count",
        "description": "Checks all rooms in a hotel and returns the ones available for the given dates and number of guests.",
        "operationId": "FindAvailableRooms",
        "parameters": [
          {
            "name": "startDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "name": "numberOfGuests",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RoomDto"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/bookings": {
      "post": {
        "tags": [
          "HotelBooking.Api"
        ],
        "summary": "Book a hotel room",
        "description": "Creates a new booking if one does not already exist with the same idempotency key. \r\nClients must provide a unique `idempotencyKey` for each booking request. \r\nIf the same key is sent again, the existing booking will be returned.",
        "operationId": "BookRoom",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookingRequestDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/bookings/{reference}": {
      "get": {
        "tags": [
          "HotelBooking.Api"
        ],
        "summary": "Get booking details",
        "description": "Retrieves booking information based on a booking reference.",
        "operationId": "GetBookingDetails",
        "parameters": [
          {
            "name": "reference",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BookingDetailsDto"
                }
              }
            }
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/seed": {
      "post": {
        "tags": [
          "HotelBooking.Api"
        ],
        "operationId": "SeedData",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/reset": {
      "post": {
        "tags": [
          "HotelBooking.Api"
        ],
        "operationId": "ResetData",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BookingDetailsDto": {
        "type": "object",
        "properties": {
          "bookingReference": {
            "type": "string"
          },
          "hotelName": {
            "type": "string"
          },
          "roomType": {
            "type": "string"
          },
          "guests": {
            "type": "integer",
            "format": "int32"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          }
        }
      },
      "BookingRequestDto": {
        "type": "object",
        "properties": {
          "roomId": {
            "type": "integer",
            "format": "int32"
          },
          "numberOfGuests": {
            "type": "integer",
            "format": "int32"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "idempotencyKey": {
            "type": "string"
          }
        }
      },
      "BookingResponseDto": {
        "type": "object",
        "properties": {
          "bookingId": {
            "type": "integer",
            "format": "int32"
          },
          "roomId": {
            "type": "integer",
            "format": "int32"
          },
          "startDate": {
            "type": "string",
            "format": "date"
          },
          "endDate": {
            "type": "string",
            "format": "date"
          },
          "numberOfGuests": {
            "type": "integer",
            "format": "int32"
          },
          "bookingReference": {
            "type": "string"
          },
          "idempotencyKey": {
            "type": "string"
          }
        }
      },
      "HotelDto": {
        "type": "object",
        "properties": {
          "hotelId": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "RoomDto": {
        "type": "object",
        "properties": {
          "roomId": {
            "type": "integer",
            "format": "int32"
          },
          "hotelId": {
            "type": "integer",
            "format": "int32"
          },
          "roomType": {
            "type": "string"
          },
          "capacity": {
            "type": "integer",
            "format": "int32"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "HotelBooking.Api"
    }
  ]
}